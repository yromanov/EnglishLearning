<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WordSummaryActivity">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/englishWord"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/translation" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/translation"
            app:layout_constraintTop_toBottomOf="@+id/englishWord"
            app:layout_constraintBottom_toTopOf="@+id/levelOfKnowledge" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/levelOfKnowledge"
            app:layout_constraintTop_toBottomOf="@+id/translation"
            app:layout_constraintBottom_toTopOf="@+id/percentOfKnowledge" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/percentOfKnowledge"
            app:layout_constraintTop_toBottomOf="@+id/levelOfKnowledge"
            app:layout_constraintBottom_toTopOf="@+id/successTrainsCount" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/successTrainsCount"
            app:layout_constraintTop_toBottomOf="@+id/percentOfKnowledge"
            app:layout_constraintBottom_toTopOf="@+id/totalNumOfTrains" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/totalNumOfTrains"
            app:layout_constraintTop_toBottomOf="@+id/successTrainsCount"
            app:layout_constraintBottom_toTopOf="@+id/changeTranslationButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Change translation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/changeTranslationButton"
            app:layout_constraintTop_toBottomOf="@+id/totalNumOfTrains"
            app:layout_constraintBottom_toTopOf="@+id/removeButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Remove from dictionary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/removeButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/changeTranslationButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>