<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TrainingActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/trainRight"
            app:layout_constraintStart_toEndOf="@+id/trainLeft" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/trainWord" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/submitButton"
            app:layout_constraintVertical_chainStyle="packed" android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp">
        <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/buttonR1" android:layout_weight="1"
                android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
        <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/buttonR2" android:layout_weight="1"
                android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
        <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/buttonR3" android:layout_weight="1"
                android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/trainLeft"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/trainRight"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintBottom_toBottomOf="@+id/trainRight" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintTop_toTopOf="@+id/trainRight">
        <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/buttonL1" android:layout_weight="1"
                android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
        <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/buttonL3" android:layout_weight="1"
                android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
        <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/buttonL2" android:layout_weight="1"
                android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
    </LinearLayout>
    <TextView
            android:layout_height="wrap_content" android:id="@+id/trainWord"
            android:layout_width="match_parent" android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constrainedWidth="false" app:layout_constrainedHeight="false"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/trainRight"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submitButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="52dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/trainRight"/>

</android.support.constraint.ConstraintLayout>